<div class="col-md-3">
  <div class="list-group">
    <%= link_to contacts_path, class: "list-group-item active" do %>
      All Contact <span class="badge"><%= MyContact.count%></span>
    <%end%>

    <%Group.all.each do |group|%>
    <%= link_to contacts_path(group_id: group.id), class: "list-group-item" do %>
    <%=group.name%> <span class="badge"><%= group.my_contacts.count%></span>
    <%end%>
<%end%>
  </div>
</div>
<!-- /.col-md-3 -->
